<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/card_view"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_client_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agung Harahap"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/peacockBlue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_client_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="#222222"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/azure"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/alamat_client_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_client_textView"
            android:layout_marginTop="10dp"
            android:text="Jalan in dulu aja"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tanggal_mulai_client_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alamat_client_textView"
            android:layout_marginTop="15dp"
            android:text="Minggu, 05 Maret 2000"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tanggal_selesai_client_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tanggal_mulai_client_textView"
            android:layout_marginTop="10dp"
            android:background="@color/veryLightBlue"
            android:padding="3dp"
            android:text="Selesai Pada Minggu, 05 Maret 2000"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/pumpkinOrange"
            android:textSize="8sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/empty_client_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/id_client_textView" />

        <TextView
            android:id="@+id/unknown_client_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/empty_client_textView"
            android:background="@color/azure"
            android:padding="3dp"
            android:text="4371"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>